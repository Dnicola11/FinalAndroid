rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colecci√≥n de repuestos
    match /repuestos/{document} {
      // Permitir lectura y escritura solo a usuarios autenticados
      allow read, write: if request.auth != null;
    }
    
    // Reglas para otras colecciones futuras
    match /{document=**} {
      // Por defecto, denegar acceso a otras colecciones
      allow read, write: if false;
    }
  }
}
