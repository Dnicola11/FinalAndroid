rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta de repuestos
    match /repuestos/{allPaths=**} {
      // Permitir lectura y escritura solo a usuarios autenticados
      allow read, write: if request.auth != null;
    }
    
    // Denegar acceso a otras carpetas por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
